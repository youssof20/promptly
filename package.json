{
  "name": "promptly",
  "version": "1.0.0",
  "description": "AI prompt optimizer browser extension",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "build": "npm run build:db && npm run build:web",
    "build:db": "cd packages/database && npm run build",
    "build:web": "cd apps/web && npm run build",
    "lint": "turbo run lint",
    "type-check": "turbo run type-check"
  },
  "devDependencies": {
    "turbo": "^1.10.12",
    "@types/node": "^20.8.0",
    "typescript": "^5.2.2",
    "sharp": "^0.33.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "packageManager": "npm@10.0.0"
}
