{
  "manifest_version": 3,
  "name": "Promptly - Open Source AI Prompt Optimizer",
  "version": "2.0.0",
  "description": "Open source AI prompt optimizer that automatically improves your prompts before sending to AI systems. Works with your own API keys, supports local AI models, and is completely free.",
  "permissions": [
    "activeTab",
    "storage",
    "scripting"
  ],
  "host_permissions": [
    "https://chat.openai.com/*",
    "https://claude.ai/*",
    "https://poe.com/*",
    "https://bard.google.com/*",
    "https://chatgpt.com/*",
    "https://deepseek.com/*",
    "https://x.com/*",
    "https://twitter.com/*",
    "https://api.openai.com/*",
    "https://api.anthropic.com/*",
    "https://generativelanguage.googleapis.com/*",
    "https://api.deepseek.com/*",
    "http://localhost:11434/*",
    "http://localhost:1234/*"
  ],
  "background": {
    "service_worker": "dist/background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://chat.openai.com/*",
        "https://claude.ai/*",
        "https://poe.com/*",
        "https://bard.google.com/*",
        "https://chatgpt.com/*",
        "https://deepseek.com/*",
        "https://x.com/*",
        "https://twitter.com/*"
      ],
      "js": ["dist/content.js"],
      "css": ["dist/content.css"],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_popup": "dist/popup.html",
    "default_title": "Promptly - Open Source AI Prompt Optimizer"
  },
  "icons": {
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["dist/injected.js"],
      "matches": ["<all_urls>"]
    }
  ]
}
